<h1>Hippop In!</h1>

<%=flash.notice %>

<%= form_tag signing_in_path do %>
  <div class= "field">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class= "field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Hippop in"%></div?
<% end %>