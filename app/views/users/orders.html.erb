
  <!-- <h2>Orders to fulfill</h2> -->
  <h1><%= @product.name.upcase %></h1><hr>
  <div>
    <ol>
      <% @items.each do |op| %>
        <li>
        <% @order = Order.find(op.order_id) %>
        <%= link_to "Order #{op.order_id}", order_path(op.order_id) %> <br>
        <%= @order.inspect %><br>
          <% if session[:user_id] == @order.user_id %>
            <strong>You can't buy your own products!</strong> <hr><!-- Imperfect bug fix -->
          <% else %> 
            Quantity: <%= op.quantity %><br>
            Status: <%=@order.status %>
         </li>
            <% if @order.purchase_info %>
              <%#= @order.purchase_info.inspect %>
              <h3>Ship to:</h3>
              <div class="address">
                <%#= User.find(@order.user_id).name %><br>
                <%= @order.purchase_info.first_name %>
                <%= @order.purchase_info.last_name %><br>
                <%= @order.purchase_info.address %>
                <%= @order.purchase_info.address2 if @order.purchase_info.address2%><br>
                <%= @order.purchase_info.city %>,
                <%= @order.purchase_info.state %>
                <%= @order.purchase_info.zip_code %>
              </div>
            <% end %>  
          <hr>
          <% end %>
      <% end %>
    </ol>
  </div>
