<div class="sidebar">
  <% Category.all.each do |category| %>
  <%= link_to "#{category.name.upcase}", category_path(category) %>
  <% end %>
</div>
<hr>
<div>
  <ul>
    <% Product.all.each do |product| %>
     <%# unless product.retired %>
      <li><%= link_to "#{product.name}", product_path(product.id) %></li>
      <li><%= number_to_currency(product.price) %></li>
      <li><%= product.inventory %></li>
      <li><%= product.description %></li> 
      <li><%= form_tag(add_product_path(current_order.id, product.id), method: "post") do %>
            <%=  number_field_tag(:quantity) %>
            <%=  submit_tag "Add to Cart" %>
          <% end %>
      </li>
    <% end %>
  </ul>
</div>


