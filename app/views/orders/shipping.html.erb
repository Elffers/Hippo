<h3>Shipping Address:</h3>

  <%= form_for @purchase_info, url: {action: "checkout" } do |f| %>
  <% if @purchase_info.errors.any? %>
  <div class= "error_messages">
    <h2> Problem in Form </h2>
    <ul>
      <% @purchase_info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>:
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>:
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :address %>:
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :address2 %>:
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city, "City" %>:
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state, "State" %>:
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip_code, "Zip Code" %>:
    <%= f.number_field :zip_code %>
  </div>

    <%= f.submit "Proceed to Shipping Options" %>
<% end %>

<hr>
<%= link_to "Edit your order", order_path(current_order.id) %>