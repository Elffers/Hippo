<h1>Your Hippo Search Results</h1>

<div>
  <h3> Products that match your search </h3>
   <%= render 'products/index' %> 
    
  <h3> Cateogories that match your search </h3>
  <ul>
    <% @categories.each do |category| %>
      <li><%= link_to "Category: #{category.name.capitalize}", category_path(category.id) %></li>
    <%end %>      
  </ul>

  <ul>
    <% @users.each do |user| %>
      <li><%= link_to "User: #{user.name}", user_path(user.id) %></li>
    <%end %>      
  </ul>
</div>